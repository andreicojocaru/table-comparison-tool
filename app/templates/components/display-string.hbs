{{#if isEditing}}
  {{input class="input-edit" value=newValue enter='edit'}}
  <button class="btn btn-flat" {{action 'edit'}}>
    <i class="glyphicon glyphicon-ok"></i>
  </button>
{{else}}
  <button class="btn btn-flat btn-lg" {{action 'toggleEditing'}}>
    {{#if isNumber}}
        {{format-number modelValue format="0,0"}}
      {{else}}
        {{modelValue}}
    {{/if}}
  </button>
{{/if}}

