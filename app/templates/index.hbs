<div class="container-fluid">
<div class="table-responsive">
  <table class="table table-bordered table-condensed table-striped ">
    <thead>
      <tr>
        {{#each tableHeadColumns as |head|}}
        <th>
          {{head}}
          </th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{#each model as |car|}}
        {{car-row car=car}}
      {{/each}}
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-xs-4">
    <div class="row">
      <div class="col-xs-10">
        {{input class="form-control" value=newCarUrl}}
      </div>
      <div class="col-xs-2">
        <button class="btn btn-default" {{action 'addCar'}}>+</button>
      </div>
    </div>
  </div>
</div>
</div>